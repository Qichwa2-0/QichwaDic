<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ocram.qichwadic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".QichwaDicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_q_scaled"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.intro.ui.SplashActivity"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".core.ui.activity.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="locale">
        </activity>
        <activity
            android:name=".features.intro.ui.IntroActivity"
            android:configChanges="locale" />
    </application>

</manifest>